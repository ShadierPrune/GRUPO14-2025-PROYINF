{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    
    "rootDir": "./src",
    "outDir": "./dist",
    
    "target": "ES2022",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"] 
}